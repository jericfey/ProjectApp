<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br><br>
        <h3 class="thin center black-text">View Your Projects Below</h3>
        <br>

        <div class="row center">
            <a href="/projectadd" id="download-button" class="btn-large waves-effect waves-light grey darken-4">New
                Project</a>
        </div>
        <br><br>
    </div>
</div>
<div class="container">
    <div class="section">
        <div class="row">

            {{#each Projects}}
            <div class="col s4">
                <div class="card small brown lighten-4">
                    <div class="card-content black-text">
                        <span class="card-title">
                            <p>{{dataValues.name}}</p>
                        </span>
                        <p>{{dataValues.description}}</p>
                    </div>
                    <div class="card-action">
                        <a class="black-text" href="#">View Tasks</a>
                    </div>
                </div>
            </div>
            {{/each}}



        </div>
    </div>
</div>