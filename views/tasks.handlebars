<div class="row">

  <div class="col s2" style="margin-top: 60px; margin-left: 20px; margin-right: 20px">
    <span class="teal-text text-teal lighten-2">New Task</span>
    <form id = "createTask">
      <div class="input-field">
        <textarea id="textarea1" class="materialize-textarea" id="person"></textarea>
        <label for="textarea1">Assigned to:</label>
      </div>

      <div class="input-field">
        <textarea id="textarea1" class="materialize-textarea" id="description-input"></textarea>
        <label for="textarea1">Description:</label>
      </div>


        <p>
          <label>
            <input name="group1" type="radio" checked id="billable-radio" />
            <span>Billable</span>
          </label>
        </p>
        <p>
          <label>
            <input name="group1" type="radio" id="non-billable-radio" />
            <span>Non-Billable</span>
          </label>
        </p>

        <div class="input-field">
          <textarea id="textarea1" class="materialize-textarea" id="hours-input"></textarea>
          <label for="textarea1">Hours:</label>
        </div>

        <div class="input-field">
          <textarea id="textarea1" class="materialize-textarea" id="cost-input"></textarea>
          <label for="textarea1">Cost:</label>
        </div>

        <div class="input-field">
          <textarea id="textarea1" class="materialize-textarea" id="revenue-input"></textarea>
          <label for="textarea1">Revenue:</label>
        </div>

    
          <p>
            <label>
              <input name="group1" type="radio" checked id="backlog-radio" />
              <span>Backlog</span>
            </label>
          </p>
          <p>
            <label>
              <input name="group1" type="radio" id="in-progress-radio" />
              <span>In-Progress</span>
            </label>
          </p>
          <p>
            <label>
              <input name="group1" type="radio" id="blocked-radio" />
              <span>Blocked</span>
            </label>
          </p>
          <p>
            <label>
              <input name="group1" type="radio" id="completed-radio" />
              <span>Completed</span>
            </label>
          </p>

        <a class="waves-effect waves-light btn-small" action="submit" style="margin-top: 10px">Submit</a>
    </form>
  </div>

  <div class="container" style="margin-right: 20px">
    
    {{#each Tasks}}

    <div class="col s2" style="margin-right: 20px">
    <div id="backlog-card" class="card blue lighten-5">
      <span class="card-title">{{dataValues.name}}</span>
        <p style="padding: .2em;">Project: {{dataValues.Project.dataValues.name}}</p>
        <p style="padding: .2em;">State: {{dataValues.State.dataValues.name}}</p>
        <p style="padding: .2em;">Assigned To: {{dataValues.Person.dataValues.full_name}}</p>
        <p style="padding: .2em;">Hours Assigned: {{dataValues.hours}}</p>
        <p style="padding: .2em;">Task Cost: ${{dataValues.cost}}</p>
        <p style="padding: .2em;">Task Revenue: ${{dataValues.revenue}}</p>  
    </div>
    </div>

    {{/each}}
  </div>
